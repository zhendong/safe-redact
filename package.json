{
  "name": "safe-redact",
  "version": "1.0.0",
  "description": "A privacy-focused document redaction tool that automatically detects and redacts sensitive information from PDF and DOCX documents",
  "type": "module",
  "keywords": [
    "redaction",
    "privacy",
    "pdf",
    "docx",
    "document-processing",
    "pii",
    "sensitive-data",
    "data-protection",
    "security"
  ],
  "author": "zhendong",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zhendong/safe-redact.git"
  },
  "bugs": {
    "url": "https://github.com/zhendong/safe-redact/issues"
  },
  "homepage": "https://github.com/zhendong/safe-redact#readme",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "npm run test:predefined-words && npm run test:regex-patterns && npm run test:language-detection",
    "test:predefined-words": "npx tsx test/test-predefined-words.ts",
    "test:regex-patterns": "npx tsx --tsconfig tsconfig.test.json test/test-regex-patterns.ts",
    "test:language-detection": "npx tsx --tsconfig tsconfig.test.json test/test-language-detection.ts"
  },
  "dependencies": {
    "@huggingface/transformers": "^3.7.5",
    "file-saver": "^2.0.5",
    "mammoth": "^1.11.0",
    "mupdf": "^1.26.4",
    "pizzip": "^3.2.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@tailwindcss/vite": "^4.1.14",
    "@types/file-saver": "^2.0.7",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^5.0.3",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.14",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.7"
  }
}
